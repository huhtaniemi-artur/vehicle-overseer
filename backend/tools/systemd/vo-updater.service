[Unit]
Description=Vehicle Overseer updater (pull manifest + update)
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
WorkingDirectory=/opt/vehicle-overseer-device
EnvironmentFile=-/etc/vehicle-overseer/device.env
EnvironmentFile=-/etc/vehicle-overseer/updater.env
ExecStart=/usr/bin/python3 /opt/vehicle-overseer-device/bootstrap/vo_updater.py
